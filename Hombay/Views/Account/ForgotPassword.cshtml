
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
@model Hombay.Models.MessageModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
</head>
<body>
    <div style="margin-top:200px;">
        
        <div class="row">
            <div class="col-lg-4 offset-3">
                <h2>Enter Email Address </h2>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                 
                 
                    <div>Email Address</div>

                    <div class="input-group">
                        <span class="input-group-addon">
                           Email
                        </span>
                        <div>@Html.TextBoxFor(m => m.To, new { @class = "form-control" })</div>
                    </div>
                    <table border="0" cellpadding="0" cellspacing="0">

                        <tr>
                        </tr>

                        <tr>
                            <td>&nbsp;</td>

                            <td><br /><input type="submit" style="background-color:orangered;border:none;padding:10px;color:white;" value="Submit" /></td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        var message = "@ViewBag.Message";
        $(function () {
            if (message != "") {
                alert(message);
            }
        });
    </script>
</body>
</html>