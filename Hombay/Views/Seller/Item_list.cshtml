@model IPagedList<Hombay.tbl_items>

@{
    ViewBag.Title = "Item_list";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
@using PagedList.Mvc;
@using PagedList;

<html>
<head>

    <link href="~/content/PagedList.css" rel="stylesheet" />

</head>
<body>
    <div class="page-wrapper" style="min-height: 250px;">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title text-uppercase font-medium font-14">List </h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">

                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">

            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <h3 class="box-title">Search List</h3>
                        <div class="col-lg-7" style="display:inline;">
                            @using (@Html.BeginForm())
                            {
                                <input type="text" name="search" class="fm form-control" style="width:220px;" placeholder="Search Name" /> <button type="submit" class="fm btn btn-outline-success"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
                            }<h3></h3>
                        </div>
                        <style>
                            .fm {
                                display: inline-block;
                            }
                        </style>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Item_title)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().Category)
                                </th>


                                <th>
                                    @Html.DisplayNameFor(model => model.First().Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Item_price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Company)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().Image)
                                </th>
                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item_title)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item_price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company)
                                    </td>

                                    <td>

                                        <img src="@Url.Content(item.Image)" style="width:50px;height:50px;" />

                                    </td>
                                    <td>



                                        <button class="btn btn-primary">  @Html.ActionLink("Edit", "Update_item", new { id = item.Id }, new { @class = "link" })</button>
                                        <button class="btn btn-danger">  @Html.ActionLink("Delete", "Deleteproduct", new { id = item.Id }, new { @class = "link" })</button>
                                        <style>
                                            a.link {
                                                color: White;
                                            }

                                                a.link:hover {
                                                    color: White;
                                                }
                                        </style>








                                    </td>
                                </tr>
                            }

                        </table>


                        @Html.PagedListPager(Model, i => Url.Action("Item_list", "Seller", new { i, search = Request.QueryString["search"] }))

                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
</html>