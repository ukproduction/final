@model Hombay.tbl_Category

@{
    ViewBag.Title = "New_item";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
<html>
<head>



</head>
<body>
    <div class="page-wrapper" style="min-height: 250px;">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title text-uppercase font-medium font-14">Product</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">

                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
     

        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            @using (Html.BeginForm("New_item", "Seller", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="white-box">
                            <h3 class="box-title">New Product</h3>

                            @if (TempData["Success"] != null)
                            {<div class="container">
                                    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                                </div>
                            }

                            <div class="row">
                                <div class="col-lg-4 offset-2">

                                   
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-bars" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Name" type="text" class="form-control" name="Name" placeholder="Full Name" />

                                    </div>
                                    <br />



                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class=" fas fa-tablet" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        @*<input id="Category" type="text" class="form-control" name="Category" placeholder="Category">*@
                                        @Html.DropDownList("Category", new SelectList(ViewBag.data, "Name", "Name"), new { @class = "form-control" })

                                    </div>
                                    <br />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class=" fas fa-clipboard-check" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Company" type="text" class="form-control" name="Company" placeholder="Company">

                                    </div>
                                    <br />
                                    <div class="input-group">


                                        <input id="User_id" type="text" class="form-control" value="@Session["UserID"].ToString()" readonly style="display:none;" name="User_id" placeholder="User">

                                    </div><br />

                                    <input id="BrowseImage" type="file" name="ImageFile">


                                    <br /><br />

                                    <input type="submit" class="btn btn-primary" value="Submit" />

                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-align-left" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Quantity" type="text" class="form-control" name="Quantity" placeholder="Quantity">

                                    </div>


                                    <br />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-calendar" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Date" type="date" class="form-control" name="Date" placeholder="Date">

                                    </div>
                                    <br />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-check" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Item_price" type="text" class="form-control" name="Item_price" placeholder="Price">

                                    </div>
                                    <br />


                                </div>
                            </div>






                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</body>
</html>