@model Hombay.tbl_proprogress
@{
    ViewBag.Title = "Update_ProProgress";
    Layout = "~/Views/_LayoutPageServicer.cshtml";
}

<script>
    $("#btn30").click(function () {

        document.getElementById("Progress").value = "30";
    });

    $("#btn50").click(function () {

        document.getElementById("Progress").value = "50";
    });
    $("#btn100").click(function () {

        document.getElementById("Progress").value = "100";
    });
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="row">
    @using (Html.BeginForm("Update_ProProgress", "Servicer", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {

    <div class="col-lg-6 offset-4" style="padding-top:50px;">


        @if (TempData["Success"] != null)
        {<div class="container">
                <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
            </div>
        }


        <div class="Hide" style="display:none;">
            <input id="Pro_id" type="text" class="form-control" name="Pro_id" value="@Model.Pro_id" />
            <input id="Name" type="text" class="form-control" name="User_id" value="@Model.User_id" />
            <input id="Name" type="text" class="form-control" name="Project_name" value="@Model.Project_name" />
            <input id="Servicer_id" type="text" class="form-control" name="Servicer_id" value="@Model.Servicer_id" />
        </div>
        <h2>Project Progress</h2>


        <progress id="Progresss" name="Progresss" value="@Model.Progress" max="100" style="padding:25px;width:900px;">50</progress>


        <select name="Progress">
            <option value="">Please Select</option>
            <option value="0">Started</option>
            <option value="30">30%</option>
            <option value="50">50%</option>
            <option value="80">80%</option>
            <option value="100">Completed</option>
        </select>

    </div>
        <div class="col-lg-8 offset-4">

            <label>Write something about work</label><br />
            <textarea id="area" name="" style="width:700px;height:250px;"></textarea><br />
            <button class="btn btn-primary" id="Submit" type="submit">Submit</button>
            <br /><br />

        </div>
        <br />
    }
</div>
