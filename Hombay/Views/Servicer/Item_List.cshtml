@model IPagedList<Hombay.tbl_new_construction>


@{
    ViewBag.Title = "Item_List";
    Layout = "~/Views/_LayoutPageServicer.cshtml";
}@using PagedList.Mvc;
@using PagedList;
<html>
<head>
    <link href="~/content/PagedList.css" rel="stylesheet" />
    @ViewBag.LoginUsername

</head>
<body>
    <div class="page-wrapper" style="min-height: 250px;">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title text-uppercase font-medium font-14">List </h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">

                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">

            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <h3 class="box-title">Search List</h3>

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Title)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().Type)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Quantity)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Dimension)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().Email)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.First().Image)
                                </th>
                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dimension)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>

                                        <img src="@Url.Content(item.Image)" style="width:50px;height:50px;" />

                                    </td>
                                    <td>
                                        <button class="btn btn-success">  @Html.ActionLink("Offer", "New_Bid", new { id = item.Id }, new { @class = "link" })</button>
                                       

                                    </td>
                                </tr>
                            }

                        </table>

                        @Html.PagedListPager(Model, i => Url.Action("Item_list", "Servicer", new { i, search = Request.QueryString["search"] }))

                        <style>
                            a.link{

                                color:White;
                            }
                            a.link:hover{
                                color:White;
                            }

                        </style>


                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
</html>