    <link rel="stylesheet" type="text/css" href="~/js/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/js/Login/css/main.css">
    <!--===============================================================================================-->
    <style>
        .body {
            background-color: gray;
            background-image: url('../../images/Login, sighup image.png');
            background-repeat: no-repeat;
            background-size: 100% 108%;
        }
    </style>
</head>

<body class="body" style="background-color:orangered;">

    <div class="limiter">
        <div class="container-login1000" style="margin:60px 50px 50px 250px">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/img-03.jpg" style="height:300px;width:600px;" />

                </div>

                <form class="login100-form validate-form" method="post">
                    <span class="login100-form-title">
                        Admin Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Username is required">
                        <input class="input100" type="text" name="Username" placeholder="Username">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="Password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" style="background-color:orangered;">
                            Login
                        </button>
                    </div><br />
                    <span class="alert-danger">
                        @ViewBag.exm
                    </span>
                    <div class="text-center p-t-12">
                        <span class="txt1">
                            
                        </span>
                        @Html.ActionLink(" Forgot Password?", "ForgotPassword", "Account")
                       
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                           
                            @Html.ActionLink(" Create your Account", "SignUp", "SignUp")
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/js/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/js/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/js/Login/js/main.js"></script>

</body>
</html>