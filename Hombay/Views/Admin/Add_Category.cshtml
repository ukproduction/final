@model Hombay.tbl_Category
@{
    ViewBag.Title = "Add_Category";
    Layout = "~/Views/_LayoutPageAdmin.cshtml";
}

<body>
    <div class="page-wrapper" style="min-height: 250px;">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title text-uppercase font-medium font-14">Profile Page</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">
                      
                    </div>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>



        <div class="container-fluid">

            @using (Html.BeginForm("Add_Category", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="white-box">
                            <h3 class="box-title">New Category</h3>
                            <div class="row">
                                <div class="col-lg-4 offset-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-bars" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Name" type="text" class="form-control" name="Name" placeholder="Name">

                                    </div>
                                    <br />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-book" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Title" type="text" class="form-control" name="Title" placeholder="Title">

                                    </div>
                                    <br />
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fas fa-file-image" style="margin:0px;padding:10px;background-color:orangered;color:white;"> </i>
                                        </span>

                                        <input id="Description" type="text" class="form-control" name="Description" placeholder="Description">

                                    </div>
                                    <br />
                                    <input type="submit" value="Submit" class="btn btn-primary" />

                                    <br /><br />


                                </div>

                            </div>






                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</body>
